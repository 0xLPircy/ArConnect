{
  "name": "weavemask",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@geist-ui/react": "^2.1.0-canary.2",
    "arweave": "^1.10.3",
    "react": "^17.0.1",
    "react-app-rewired": "^2.0",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-scripts": "4.0.1",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.129",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^7.1.16",
    "@types/redux": "^3.6.0",
    "prettier": "^2.2.1",
    "sass": "^1.32.5",
    "typescript": "^3.8.0",
    "webpack-chrome-extension-reloader": "^1.3.0",
    "webpack-cli": "^4.4.0",
    "webpack-merge": "^5.7.3",
    "yorkie": "^2.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=development webpack --config webpack.dev.js --mode=development --watch ",
    "build": "react-app-rewired build",
    "eject": "react-scripts eject",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check ."
  },
  "gitHooks": {
    "pre-commit": "prettier --write . && git add -A"
  },
  "eslintConfig": {
    "extends": "react-app",
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true,
      "webextensions": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
