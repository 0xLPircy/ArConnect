{
  "manifest_version": 2,
  "name": "WeaveMask",
  "version": "0.1.0",
  "author": "th8ta",
  "description": "Secure wallet management for Arweave",
  "permissions": [],
  "background": {
    "scripts": ["static/js/background.js"]
  },
  "icons": {
    "192": "logo192.png"
  },
  "browser_action": {
    "default_icon": {
      "192": "logo192.png"
    },
    "default_title": "Popup",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "web_accessible_resources": ["welcome.html", "welcome.js"]
}
