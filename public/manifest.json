{
  "manifest_version": 2,
  "name": "WeaveMask",
  "version": "0.1.0",
  "author": "th8ta",
  "description": "Secure wallet management for Arweave",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["static/js/background.js"]
  },
  "icons": {
    "64": "logo64.png",
    "128": "logo128.png",
    "256": "logo256.png"
  },
  "browser_action": {
    "default_icon": {
      "64": "logo64.png",
      "128": "logo128.png",
      "256": "logo256.png"
    },
    "default_title": "Popup",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": ["welcome.html", "static/js/api.js"],
  "content_scripts": [
    {
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "js": ["static/js/contentscript.js"],
      "run_at": "document_end"
    }
  ]
}
